<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок главного экрана (тёмная тема) -->
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24sp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для иконки настроек (тёмная тема) -->
    <style name="SettingsIconStyle">
        <item name="android:tint">@color/yp_white</item>
    </style>

    <!-- Темная кнопка (для кнопки очистки истории) - в темной теме белая -->
    <style name="DarkButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Название трека (темная тема) -->
    <style name="TrackNameTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <!-- Имя артиста (темная тема) -->
    <style name="TrackArtistTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_text_tertiary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>
</resources>
