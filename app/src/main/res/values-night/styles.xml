<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок главного экрана (тёмная тема) -->
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24sp</item>
        <item name="iconTint">@color/dark_button_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для иконки настроек (тёмная тема) -->
    <style name="SettingsIconStyle">
        <item name="android:tint">@color/dark_text_tertiary</item>
    </style>
</resources>
