<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Переиспользуемые цвета YP -->
    <color name="yp_black">#FF1A1B22</color>
    <color name="yp_white">#FFFFFFFF</color>
    <color name="yp_text_gray">#FFAEAFB4</color>
    <color name="yp_light_gray">#FFE6E8EB</color>
    <color name="yp_red">#FFF56B6C</color>
    <color name="yp_blue">#FF3772E7</color>
    <color name="yp_background">#801A1B22</color>
    <color name="yp_blue_light">#FF9FBBF3</color>

    <!-- Цвет фона меню: светлая тема -->
    <color name="menu_background">@color/yp_blue</color>

    <!-- Алиасы для themes.xml (светлая тема) -->
    <color name="white">@color/yp_white</color>
    <color name="black">@color/yp_black</color>
    <color name="light_primary">@color/yp_blue</color>
    <color name="light_background">@color/yp_white</color>
    <color name="light_surface">@color/yp_light_gray</color>
    <color name="light_text_primary">@color/yp_black</color>
    <color name="light_text_tertiary">@color/yp_text_gray</color>

    <!-- Алиасы для themes.xml (темная тема) - базовые значения для светлой темы -->
    <color name="dark_primary">@color/yp_blue</color>
    <color name="dark_background">@color/yp_white</color>
    <color name="dark_surface">@color/yp_light_gray</color>
    <color name="dark_text_primary">@color/yp_black</color>
    <color name="dark_text_tertiary">@color/yp_text_gray</color>

    <!-- Цвет фона поля поиска (светлая тема) -->
    <color name="search_field_background">@color/light_surface</color>

    <!-- Цвет текста в поле поиска (всегда темный, так как фон светлый) -->
    <color name="search_text_color">@color/yp_black</color>

    <!-- Цвет иконок в поле поиска (светлая тема - серый) -->
    <color name="search_icon_tint">@color/yp_text_gray</color>

    <!-- Цвет подсказки в поле поиска (светлая тема - серый) -->
    <color name="search_hint_color">@color/yp_text_gray</color>
</resources>
