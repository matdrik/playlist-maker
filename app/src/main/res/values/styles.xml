<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для контейнера главного экрана -->
    <style name="MainContainerStyle">
        <item name="android:backgroundTint">@color/light_primary</item>
    </style>

    <!-- Стиль для кнопок главного экрана -->
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24sp</item>
        <item name="iconTint">@color/light_button_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для текста заголовка приложения -->
    <style name="AppTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для текста заголовка (экран настроек) -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для текста элемента настроек -->
    <style name="SettingsItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <!-- Стиль для кнопки назад -->
    <style name="BackButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <!-- Стиль для макета элемента настроек -->
    <style name="SettingsItemLayoutStyle">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Стиль для макета заголовка -->
    <style name="HeaderLayoutStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Стиль для иконки настроек -->
    <style name="SettingsIconStyle">
        <item name="android:tint">@color/light_text_tertiary</item>
    </style>
</resources>
