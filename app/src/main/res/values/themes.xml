<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основной цвет бренда. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Вторичный цвет бренда. -->
        <item name="colorSecondary">@color/light_primary</item>
        <item name="colorSecondaryVariant">@color/light_primary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Цвета фона -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/light_text_tertiary</item>

        <!-- Цвет строки состояния. -->
        <item name="android:statusBarColor">@color/light_primary</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>
